#!/usr/bin/env bash
indent() {
    sed -u 's/^/      /'
}

copy() {
    echo "Copying $1 -> $2" | indent
    cp "$1" "$2"
    return $?
}

copy_if_exists() {
    if [ -e "$1" ]; then
        copy "$1" "$2"
        return $?
    fi
    echo "$1 does not exist; skipping copy" | indent
    return 0
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    echo "APP_BASE was not set. Aborting" | indent
    exit 1
fi

echo "------> APP_BASE is set. Copying files..."
APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"
(
    copy "${BUILD_DIR}/${APP_BASE}/Procfile" "${BUILD_DIR}/Procfile" &&
    copy "${BUILD_DIR}/${APP_BASE}/.requirements-for-heroku.txt" "${BUILD_DIR}/requirements.txt" &&
    copy_if_exists "${BUILD_DIR}/${APP_BASE}/manage.py" "${BUILD_DIR}/manage.py" &&
    copy_if_exists "${BUILD_DIR}/${APP_BASE}/Aptfile" "${BUILD_DIR}/Aptfile"
)

if [ $? -ne 0 ]; then
    echo "FAILED to copy files into place" | indent
    exit 1
fi

echo "All files copied successfully!" | indent

