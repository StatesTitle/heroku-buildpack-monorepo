#!/usr/bin/env bash
indent() {
    sed -u 's/^/      /'
}

cp_if_exists() {
    if [ -e "$1" ]; then
        cp "$1" "$2"
        return $?
    fi
    return 0
}

BUILD_DIR="$1"
CACHE_DIR="$2"
ENV_DIR="$3"
STAGE="$(mktemp -d)"

if [ ! -f "${ENV_DIR}/APP_BASE" ]; then
    echo "APP_BASE was not set. Aborting" | indent
    exit 1
fi
APP_BASE="$(cat "${ENV_DIR}/APP_BASE")"
(
    cp "${BUILD_DIR}/${APP_BASE}/Procfile" "${BUILD_DIR}/Procfile" &&
    cp "${BUILD_DIR}/${APP_BASE}/.requirements-for-heroku.txt" "${BUILD_DIR}/requirements.txt" &&
    cp_if_exists "${BUILD_DIR}/${APP_BASE}/manage.py" "${BUILD_DIR}/manage.py" &&
    cp_if_exists "${BUILD_DIR}/${APP_BASE}/Aptfile" "${BUILD_DIR}/Aptfile"
)

if [ $? -ne 0 ]; then
    echo "FAILED to copy directory into place" | indent
    exit 1
fi
echo "GEN"
cat "${BUILD_DIR}/requirements.txt"
echo "REF"
cat "${BUILD_DIR}/${APP_BASE}/requirements.txt"

echo "Created new requirements.txt and copied procfile successfully!" | indent

